<script src="https://www.ribocentre.org/js/panzoom.js"></script>
<script type="text/javascript">
    window.addEventListener('DOMContentLoaded', (event) => {
        var zoomAreas = document.querySelectorAll(".image-wrapper img");
        var panzooms = [];

        zoomAreas.forEach(function(zoomArea, index) {
            var panzoom = Panzoom(zoomArea, {
                maxScale: 6
            });
            panzooms.push(panzoom);

            zoomArea.addEventListener("wheel", function(e) {
                e.preventDefault();
                panzoom.zoomWithWheel(e);
            });

            zoomArea.addEventListener("click", function(e) {
                e.preventDefault();
                var url = zoomArea.src;
                var newWindow = window.open(url, "_blank");
                newWindow.focus();
            });
        });

        function showImage(imageUrl, index) {
            var imagePreview = document.getElementById("image-preview0");
            var imageLink = document.getElementById("image-link0");
            var imageCaption = document.getElementById("image-caption");

            imagePreview.src = imageUrl;
            imageLink.href = imageUrl;

            if (index === 0) {
                imageCaption.innerHTML = "è¿™æ˜¯aå›¾ç‰‡";
            } else if (index === 1) {
                imageCaption.innerHTML = "ç»“æŸäº†";
            }
        }

        showImage(zoomAreas[0].src, 0); // é»˜è®¤æ˜¾ç¤ºç¬¬ä¸€å¼ å›¾ç‰‡

        panzooms[0].zoom(0.8); // é»˜è®¤ç¼©æ”¾ç¬¬ä¸€ä¸ªæ”¾å¤§åŒºåŸŸ
    });
</script>
