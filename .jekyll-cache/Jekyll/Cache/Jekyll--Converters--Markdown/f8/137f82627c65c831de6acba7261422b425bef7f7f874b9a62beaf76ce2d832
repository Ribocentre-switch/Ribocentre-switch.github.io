    <script src="https://www.ribocentre.org/js/panzoom.js"></script>
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            var zoomArea = document.getElementById("image-preview");
            var panzoom = Panzoom(zoomArea, {
                maxScale: 6
            });

            // ç›‘å¬æ»šè½®äº‹ä»¶
            zoomArea.addEventListener("wheel", function (e) {
                e.preventDefault();
                var scaleDelta = e.deltaY > 0 ? 0.8 : 1.2; // æ ¹æ®æ»šè½®æ»šåŠ¨æ–¹å‘ç¡®å®šç¼©æ”¾å› å­
                panzoom.zoomWithWheel(e, scaleDelta);
            });

            // è·å–URLå‚æ•°ä¸­çš„å›¾ç‰‡URL
            var urlParams = new URLSearchParams(window.location.search);
            var imageUrl = urlParams.get('image');
            
            // æ˜¾ç¤ºå›¾ç‰‡
            zoomArea.src = imageUrl;
        });
    </script>
